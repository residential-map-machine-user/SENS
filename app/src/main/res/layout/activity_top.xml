<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="laklab.inc.sens.TopActivity"
    android:id="@+id/main_view"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="0"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/annual_schedule_button"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_margin="10dp"
            android:background="#ff89dfff"
            />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/show_event_button"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="15dp"
            android:layout_margin="10dp"
            android:background="#ff89dfff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="0"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/make_task_button"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_margin="10dp"
            android:background="#ff89dfff" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button_make_event"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="15dp"
            android:layout_margin="10dp"
            android:background="#ff89dfff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="0"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button_mypage"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_margin="10dp"
            android:background="#ff89dfff" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/button_task_list"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="15dp"
            android:layout_margin="10dp"
            android:background="#ff89dfff" />
    </LinearLayout>

</LinearLayout>
