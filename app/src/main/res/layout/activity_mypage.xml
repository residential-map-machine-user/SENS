<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="laklab.inc.sens.MypageActivity"
    android:orientation="vertical"
    android:id="@+id/myPage">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参加予定のイベント"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:background="#fffff9e1">
        <ListView
            android:id="@+id/my_event"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"></ListView>
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仕事一覧"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffffda">
        <ListView
            android:id="@+id/my_task"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fffffdec"></ListView>
        </LinearLayout>

</LinearLayout>
